# Docs: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
tab_width = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{*.yml,*.yaml}]
indent_size = 2

[{*.bash,*.sh}]
indent_size = 2
tab_width = 2
